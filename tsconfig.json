{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["ES2022", "esnext.disposable"],
    "outDir": "./dist",
    "skipLibCheck": true,
    "target": "es2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules/"],
  "include": ["src/**/*.ts"]
}
